<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_other"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/color_orange"
        android:orientation="horizontal"
        android:padding="3dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/app_icon"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:text="Vistarak"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnt_boxer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lnt_header"
        android:orientation="vertical">

        <ImageView

            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/profile_default"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <!--Row one item 1-->
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_dashboard"
                    android:layout_weight="1"

                    android:elevation="8dp"
                    card_view:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="5dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center|top"
                                android:layout_weight="1"
                                android:padding="0dp"

                                android:src="@drawable/star" />

                            <TextView
                                android:id="@+id/tv_new_member"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Booth Meeting"
                                android:textColor="@color/color_black"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/txt_new_member"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="0"
                                android:textColor="@color/color_black"
                                android:textSize="15sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <!--Row one item 2-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_gravity="center"
                    android:layout_weight="1"


                    android:elevation="8dp"
                    card_view:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="5dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center|top"
                                android:layout_weight="1"

                                android:padding="15dp"
                                android:src="@drawable/bike" />

                            <TextView
                                android:id="@+id/tv_special_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Motor Cycle"
                                android:textColor="@color/color_black"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/txt_special_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="0"
                                android:textColor="@color/color_black"
                                android:textSize="15sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_dashboard"
            android:orientation="horizontal">
            <!--Row one item 1-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:id="@+id/crd_man"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_dashboard"

                    android:layout_weight="1"
                    android:elevation="8dp"
                    card_view:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="5dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center|top"
                                android:layout_weight="1"
                                android:padding="0dp"

                                android:src="@drawable/group" />

                            <TextView
                                android:id="@+id/tv_man_kibat_pramukh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Man Ki baat Pramukh"
                                android:textColor="@color/color_black"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/txt_Man_ki_baat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="0"
                                android:textColor="@color/color_black"
                                android:textSize="15sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <!--Row one item 2-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:id="@+id/crd_booth_visit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_height"
                    android:layout_gravity="center"
                    android:layout_weight="1"


                    android:elevation="8dp"
                    card_view:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="5dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center|top"
                                android:layout_weight="1"
                                android:padding="0dp"

                                android:src="@drawable/whtsapp" />

                            <TextView
                                android:id="@+id/tv_key_voter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Whats App Group"
                                android:textColor="@color/color_black"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/txt_key_voter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="0"
                                android:textColor="@color/color_black"
                                android:textSize="15sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnt_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/icon_size"
            android:gravity="center"
            android:orientation="horizontal">
            <!--Row one item 1-->

            <!--Row one item 2-->

            <android.support.v7.widget.CardView
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"


                card_view:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_button"
                    android:gravity="center"
                    android:padding="5dp">


                    <LinearLayout
                        android:id="@+id/lnt_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"

                        android:orientation="vertical">
                        <!--android:drawableRight="@android:drawable/stat_notify_sync_noanim"-->
                        <TextView
                            android:id="@+id/txt_dashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:gravity="center"

                            android:text="Record Activity"
                            android:textColor="@color/white"
                            android:textSize="15sp" />


                    </LinearLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_weekely_expensive"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/lnt_boxer"
        android:layout_centerInParent="true"
        android:background="@drawable/curve_button_wh"
        android:drawableLeft="@drawable/drawable_icon_arrow"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:visibility="visible"
        android:text="Weekely Expense"
        android:textColor="@color/color_black"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="@string/version_code"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/tracking_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_margin="@dimen/dash_board_bottom_margin"
        android:background="@drawable/ripple_button_white"
        android:padding="5dp"
        android:src="@drawable/track"
        android:textColor="@color/color_black"
        android:textSize="12dp" />
</RelativeLayout>