<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#320A0A" />

            <padding android:bottom="8dp" android:top="8dp" />

            <corners android:radius="5dp" />

            <stroke android:width="1dp" android:color="#171717" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:centerColor="#00E4CAC3" android:endColor="#00581809" android:startColor="#00EF785A" />

            <padding android:bottom="8dp" android:top="8dp" />

            <stroke android:width="1dp" android:color="#fff" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>